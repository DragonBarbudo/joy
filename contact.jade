//-output: index.html, pretty:false

include site/_config.jade

+html5
  +head(title, stylesheets, keywords, description)
  body
    +auxmenu
    .container
      .col2(data-sr).logo
        a(href="index.html"): .svg(data="site/img/joy.svg").joy.w100
    .menuHidden
      .container
        nav.mainNav: +menu('index', menu, 'horizontal')
    
    .container.w100.contact
      .col12#map
          | <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2314.4346693951093!2d-99.18920509320718!3d19.362387004694895!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x85d1ff8af124bc1d%3A0x6b092d7e8f2f7c5e!2sSagredo+226%2C+Guadalupe+Inn%2C+01020+Ciudad+de+M%C3%A9xico%2C+D.F.%2C+M%C3%A9xico!5e0!3m2!1ses!2sus!4v1444775947481" width="100%" height="520" frameborder="0" style="border:0" allowfullscreen></iframe>
      .col5.push7#form
        .container
          .col12
            h2 Solicita una cotización.
            p Incluye una asesoría JOY 100% Gratis.
        +formSimple('contacto@joycomunicacion.com', 'contacto@joycomunicacion.com', 'Mensaje del sitio web')
          .container
            .col6: +formInput('text', 'Compañía', 'Compañia:', '', false)
            .col6: +formInput('text', 'Sitio', 'Sitio web:', '', false)
          .container
            .col12
              label Servicios Joy
              .select
                select(name="Servicio")
                  option(value="", disabled) Elegir un servicio
                  option(value="Events") Events
                  option(value="Gadgets") Gadgets
                  option(value="Studio Marketing") Studio Marketing
          
    +footer
            
    +scripts
